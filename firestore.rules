rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: check if authenticated user has an admins/{uid} document
    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Admins collection: only admins may read; no client-side writes.
    match /admins/{adminId} {
      allow read: if isAdmin();
      allow write: if false;
    }

    // Users: user reads/writes own profile; admin may read all
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Orders: user may read their own orders (by comparing email token) or admin may read all
    match /orders/{orderId} {
      allow read: if isAdmin()
                  || (request.auth != null && resource.data.customerEmail == request.auth.token.email);
      // Only admin/server may create or modify orders
      allow write: if isAdmin();
    }

    // Order events: admin-only
    match /order-events/{eventId} {
      allow read, write: if isAdmin();
    }

    // Counters: backend only
    match /counters/{counterId} {
      allow read, write: if false;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
